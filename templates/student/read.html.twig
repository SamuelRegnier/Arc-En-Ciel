{% extends 'base.html.twig' %}

{% block title %}Elèves Sarments{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="d-flex justify-content-center mb-3">Elèves école Sarments</h1>
        <div class="row row-cols-1 row-cols-md-3 g-4 d-flex justify-content-center">
            {% for student in students %}
                <div class="card text-white bg-primary mb-3 mx-3 d-flex justify-content-center" style="max-width: 20rem;">
                    <div class="card-header d-flex justify-content-center">{{student.lastName}} {{ student.firstName}}
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-center">
                            <a href="{{ path('student_select_id', { id: student.id }) }}" class="stretched-link img-fluid"><img style="max-width: 100%;" src="{{ vich_uploader_asset(student, 'imageFile') }}"></a>
                        </div>
                        <p class="card-text d-flex justify-content-center">{{student.birthday|date('d-m-Y')}}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    <div class="d-flex justify-content-center mb-3">
        <a href="{{ path('student_create') }}"><button type="button" class="btn btn-outline-primary btn-lg">Créer profil</button></a>
    </div>
    <div class="navigation d-flex justify-content-center">
        {{ knp_pagination_render(students) }}
    </div>
</div>

{% endblock %}