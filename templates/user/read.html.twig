{% extends 'base.html.twig' %}

{% block title %}Utilisateurs Sarments{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="d-flex justify-content-center mb-3">Utilisateurs école Sarments</h1>
        <div class="row row-cols-1 row-cols-md-3 g-4 d-flex justify-content-center">
            {% for user in users %}
                <div class="card text-white bg-primary mb-3 mx-3 d-flex justify-content-center" style="max-width: 20rem;">
                    <div class="card-header d-flex justify-content-center">{{user.lastName}} {{ user.firstName}}
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-center">
                            <a href="{{ path('user_select_id', { id: user.id }) }}"><img style="max-width: 100%;" src="{{ vich_uploader_asset(user, 'imageFile') }}"></a>
                        </div>
                        <p class="card-text d-flex justify-content-center">{{user.roles[0]}}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    <div>
        <a href="{{ path('user_create') }}"><button>Créer profil</button></a>
    </div>
    <div class="navigation d-flex justify-content-center">
        {{ knp_pagination_render(users) }}
    </div>
</div>

{% endblock %}